{
  "name": "shorty-ai",
  "version": "0.2.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "web:dev": "expo start --web",
    "web:debug": "expo start --web --https",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns=e2e",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "scan:mocks": "grep -rn --include='*.ts' --include='*.tsx' --exclude-dir=__tests__ --exclude-dir=__mocks__ --exclude-dir=node_modules --exclude='*.test.*' --exclude='*.spec.*' -E \"from ['\\\"].*/__mocks__/|from ['\\\"].*/mocks/|MockM2Gateway|from ['\\\"].*/stubs/\" src/ && exit 1 || exit 0",
    "e2e:web": "playwright test",
    "e2e:web:ui": "playwright test --ui",
    "bundle:analyze": "expo export --platform web && npx source-map-explorer web-build/static/js/*.js",
    "ci": "npm run typecheck && npm run lint && npm run scan:mocks && npm run test:coverage"
  },
  "dependencies": {
    "@expo/metro-runtime": "~6.1.2",
    "@expo/vector-icons": "^15.0.2",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-native-community/slider": "^5.0.1",
    "@react-navigation/bottom-tabs": "^6.6.1",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/stack": "^6.4.1",
    "expo": "~54.0.0",
    "expo-audio": "^1.0.13",
    "expo-camera": "^17.0.8",
    "expo-clipboard": "~8.0.7",
    "expo-constants": "~18.0.9",
    "expo-haptics": "^15.0.7",
    "expo-linking": "~8.0.8",
    "expo-media-library": "~18.2.0",
    "expo-network": "^8.0.7",
    "expo-sharing": "~14.0.7",
    "expo-status-bar": "~3.0.8",
    "expo-video": "^3.0.11",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-native": "0.81.4",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "^4.1.3",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "^15.14.0",
    "react-native-web": "^0.21.1",
    "typescript": "~5.9.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.0",
    "@playwright/test": "^1.56.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.8.1",
    "@types/jest": "^29.5.14",
    "@types/react": "~19.1.10",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "jest-expo": "~54.0.0",
    "playwright": "^1.56.0",
    "react-test-renderer": "^19.1.0",
    "ts-jest": "^29.4.4"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/e2e/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "App.tsx",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**",
      "!src/screens/**",
      "!src/components/ErrorBoundary.tsx",
      "!e2e/**"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "private": true
}
